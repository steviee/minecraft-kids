{
  "name": "mck-suite-backend",
  "version": "1.0.0",
  "description": "Backend API for Minecraft Kids Server Management Suite",
  "main": "dist/index.js",
  "type": "commonjs",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:db": "ts-node src/database/test-db.ts",
    "db:init": "ts-node -e \"require('./src/database').initializeDatabase().then(() => console.log('Database initialized'))\"",
    "db:seed": "ts-node -e \"require('./src/database').initializeDatabase().then(() => require('./src/database').seedDatabase(require('./src/database').getDatabase(), { includeTestData: true }))\"",
    "db:seed:admin": "ts-node -e \"require('./src/database').initializeDatabase().then(() => require('./src/database').seedAdminUser(require('./src/database').getDatabase()))\"",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\""
  },
  "keywords": [
    "minecraft",
    "server-management",
    "docker"
  ],
  "author": "Minecraft Kids Team",
  "license": "MIT",
  "dependencies": {
    "@types/ws": "^8.18.1",
    "bcrypt": "^6.0.0",
    "better-sqlite3": "^12.4.1",
    "cors": "^2.8.5",
    "dockerode": "^4.0.9",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "minecraft-server-util": "^5.4.4",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.19",
    "@types/dockerode": "^3.3.45",
    "@types/express": "^5.0.5",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.9.2",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vitest/ui": "^4.0.5",
    "eslint": "^9.38.0",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.5"
  }
}
